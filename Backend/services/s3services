const AWS = require("aws-sdk");

const uploadToS3 = (data, filename) => {
  const BUCKET_NAME = "shivexpensetracker";
  const IAM_USER_KEY = "AKIAXZVVUL4FY5EGUANZ";
  const IAM_USER_SECRET = "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";

  let s3bucket = new AWS.S3({
    accessKeyId: IAM_USER_KEY,
    secretAccessKey: IAM_USER_SECRET,
  });

  return new Promise((resolve, reject) => {
    var params = {
      Bucket: BUCKET_NAME,
      Key: filename,
      Body: data,
      ACL: "public-read",
    };
    s3bucket.upload(params, (err, response) => {
      if (err) {
        reject(err);
      } else {
        resolve(response.Location);
      }
    });
  });
};

module.exports = {
  uploadToS3,
};
